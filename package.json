{
	"name": "fido",
	"productName": "fido",
	"author": {
		"name": "L'Atelier Numerique de l'Ecole de Design de Nantes"
	},
	"version": "1.0.0",
	"description": "fetching all the boilerplates you need",
	"repository": {
		"type": "git",
		"url": "https://github.com/AtelierNum/fido"
	},
	"main": "src/index.js",
	"scripts": {
		"start": "concurrently \"npm:svelte-dev\" \"electron-forge start\"",
		"pack": "rollup -c && electron-builder --dir",
		"dist": "rollup -c && electron-builder",
		"lint": "echo \"No linting configured\"",
		"svelte-build": "rollup -c",
		"svelte-dev": "rollup -c -w",
		"svelte-start": "sirv public"
	},
	"husky": {
		"hooks": {
			"pre-commit": "pretty-quick --staged"
		}
	},
	"keywords": [],
	"license": "MIT",
	"build": {
		"appId": "com.lecolededesign.fido",
		"files": [
			"package.json",
			"public/**/*",
			"src/index.js",
			"node_modules/**/*"
		],
		"mac": {
			"target": "dmg"
		},
		"win": {
			"target": "nsis"
		}
	},
	"dependencies": {
		"@fortawesome/free-solid-svg-icons": "^5.15.2",
		"degitdegit": "^2.10.4",
		"electron-is-dev": "^1.2.0",
		"electron-squirrel-startup": "^1.0.0",
		"electron-store": "^6.0.1",
		"electron-updater": "^4.3.5",
		"highlight.js": "^10.7.2",
		"marked": "^1.2.7",
		"normalize.css": "^8.0.1",
		"sirv-cli": "^0.4.4",
		"svelte-fa": "^2.2.0",
		"update-electron-app": "^2.0.1"
	},
	"devDependencies": {
		"@electron-forge/cli": "^6.0.0-beta.54",
		"@rollup/plugin-commonjs": "^11.0.0",
		"@rollup/plugin-node-resolve": "^7.0.0",
		"concurrently": "^5.1.0",
		"electron": "^13.6.6",
		"electron-builder": "^22.9.1",
		"electron-reload": "^1.5.0",
		"husky": "^4.3.6",
		"prettier": "2.2.1",
		"prettier-plugin-svelte": "^2.1.0",
		"pretty-quick": "^3.1.0",
		"rollup": "^1.32.0",
		"rollup-plugin-livereload": "^1.0.0",
		"rollup-plugin-svelte": "^5.0.3",
		"rollup-plugin-terser": "^7.0.2",
		"svelte": "^3.19.1"
	}
}
